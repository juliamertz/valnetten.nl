---
const { name, image, location } = Astro.props;

import { generateImage } from "astro-eleventy-img";

const img = await generateImage(image, {
  widths: [825],
  formats: ["avif"],
});

const imgSrc = img?.avif?.[0]?.url || '';
---

<a href={location} class="group block h-full">
  <div class="relative w-full h-64 md:h-80 lg:h-96 overflow-hidden rounded-lg bg-gray-100 shadow-md transition-all duration-300 hover:shadow-xl hover:scale-[1.02]">
    {imgSrc && (
      <img
        src={imgSrc}
        alt={name}
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        loading="lazy"
      />
    )}
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 p-6">
      <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">{name}</h3>
      <span class="inline-flex items-center text-white/90 text-sm font-medium group-hover:text-orange-400 transition-colors">
        Meer informatie
        <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </div>
</a>
